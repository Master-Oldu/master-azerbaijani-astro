---
const { title, description } = Astro.props;
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />

    <style>
      /**********************************************
       LEGAL PAGE CONTAINER
       (reuse blog-page + add card styling)
      **********************************************/
      .page-container.blog-page.legal-page {
        max-width: 900px;
        margin: 40px auto 60px;
        padding: 120px 20px 60px; /* extra top space under header */
        text-align: left !important;
        background: var(--card-bg);
        border-radius: 20px;
        border: 1px solid var(--card-border);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
      }

      /**********************************************
       LEGAL CONTENT TYPOGRAPHY
      **********************************************/
      .blog-page.legal-page .blog-content.legal-content {
        line-height: 1.7;
        font-size: 1rem;
      }

      /* Override global p centering just for legal */
      .blog-page.legal-page .blog-content.legal-content p {
        margin: 0 0 1.4rem;
        max-width: 900px;
        text-align: left;
      }

      .blog-page.legal-page .blog-content.legal-content li p {
        margin: 0;
        max-width: none;
        text-align: left;
      }

      /**********************************************
       HEADINGS
      **********************************************/
      .blog-page.legal-page .blog-content.legal-content h1 {
        margin-bottom: 2rem;
        font-size: 2.3rem;
        line-height: 1.2;
        text-align: center;
      }

      .blog-page.legal-page .blog-content.legal-content h2,
      .blog-page.legal-page .blog-content.legal-content h3,
      .blog-page.legal-page .blog-content.legal-content h4 {
        margin-top: 2rem;
        margin-bottom: 1rem;
        line-height: 1.3;
        text-align: left !important;
      }

      /**********************************************
       BLOCKQUOTES (if any)
      **********************************************/
      .blog-page.legal-page .blog-content.legal-content blockquote {
        border-left: 4px solid #fc723b;
        padding-left: 1rem;
        margin: 1.2rem 0;
        font-style: italic;
      }
    </style>
  </head>

  <body>
    <Header />

    <main class="page-container blog-page legal-page">
      <article class="blog-content legal-content">
        <slot />
      </article>
    </main>

    <Footer />
  </body>
</html>
