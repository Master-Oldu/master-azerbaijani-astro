---
const { title, description } = Astro.props;
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />

    <style>
      .page-container.legal-page {
        max-width: 900px;
        margin: 40px auto 60px;
        padding: 80px 20px;
        text-align: left !important;
        background: var(--card-bg);
        border-radius: 20px;
        border: 1px solid var(--card-border);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        color: var(--text);
      }

      .legal-content {
        line-height: 1.7;
        font-size: 1rem;
        color: var(--text);
      }

      /* paragraphs – override global p centering */
      .legal-content p {
        margin: 0 0 1.4rem;
        max-width: 900px;
        color: var(--text);
      }

      .legal-content li p {
        margin: 0;
        max-width: none;
      }

      /* headings */
      .legal-content h1 {
        margin-bottom: 2rem;
        font-size: 2.3rem;
        line-height: 1.2;
        text-align: center;
        color: var(--text);
      }

      .legal-content h2,
      .legal-content h3,
      .legal-content h4 {
        margin-top: 2rem;
        margin-bottom: 1rem;
        line-height: 1.3;
        text-align: left !important;
        color: var(--text);
      }

      /* lists – match blog feel */
      .page-container.legal-page .legal-content ul,
      .page-container.legal-page .legal-content ol {
        padding-left: 4rem;
        margin-left: 0;
        margin-bottom: 1.4rem;
        list-style-position: outside;
        text-align: left;
      }

      .page-container.legal-page .legal-content ul {
        list-style-type: disc;
      }

      .page-container.legal-page .legal-content ol {
        list-style-type: decimal;
      }

      .page-container.legal-page .legal-content li {
        margin-bottom: 0.6rem;
        margin-left: 0;
        padding-left: 0;
        line-height: 1.7;
        text-align: left;
        color: var(--text);
      }

      /* blockquotes */
      .legal-content blockquote {
        border-left: 4px solid #fc723b;
        padding-left: 1rem;
        margin: 1.2rem 0;
        font-style: italic;
        color: var(--text);
      }

      /* links: light mode */
      .legal-content a {
        color: #043a7a;
        font-weight: 600;
        text-decoration: underline;
        transition: color 0.2s ease;
      }

      .legal-content a:hover {
        color: #032d5d;
      }

      /* links: dark mode = orange */
      html.dark-mode .legal-content a {
        color: #fc723b;
      }

/* FINAL OVERRIDE: dark mode legal links must be orange */
html.dark-mode .page-container.legal-page .legal-content a {
  color: #fc723b !important;
}

html.dark-mode .page-container.legal-page .legal-content a:hover {
  color: #e05d20 !important;
      }
    </style>
  </head>

  <body>
    <Header />

    <main class="page-container legal-page">
      <article class="legal-content">
        <slot />
      </article>
    </main>

    <Footer />
  </body>
</html>
